<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="inventory.machtwatch.bamsppob">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".base.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BAMSPPOB">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".feature.validasi.PulsaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".feature.validasi.PlnActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".feature.listdenom.ListDenominationPulsa"
            android:screenOrientation="portrait" />

        <activity
            android:name=".feature.checkout.CheckoutActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>